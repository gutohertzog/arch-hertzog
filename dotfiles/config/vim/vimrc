" Congigurações SQL ------------------------------------------------------- {{{
" indentação
autocmd FileType sql setlocal expandtab tabstop=4 shiftwidth=4 softtabstop=4

" reconhece .sql
autocmd BufNewFile,BufRead *.sql set filetype=sql

" converte para upper
" autocmd FileType sql iabbrev <buffer> select SELECT
" autocmd FileType sql iabbrev <buffer> from FROM
" autocmd FileType sql iabbrev <buffer> where WHERE
" autocmd FileType sql iabbrev <buffer> insert INSERT
" autocmd FileType sql iabbrev <buffer> into INTO
" autocmd FileType sql iabbrev <buffer> values VALUES
" autocmd FileType sql iabbrev <buffer> grant GRANT

" ---------------------------------------------------------------------------
" função para executar SQL
function! s:ExecuteSQL(env, target, ...) range
    " guarda referência ao arquivo atual (antes de mudar de buffer)
    let current_file = expand('%:p')

    " se for seleção, salva em arquivo temporário
    if a:target ==# 'visual'
        let sqlfile = tempname()
        call writefile(getline(a:firstline, a:lastline), sqlfile)
    else
        let sqlfile = current_file
    endif

    " monta comando do sqlcmd
    let cmd = 'sqlcmd -S ' . g:sql_servers[a:env] . ' -E -i ' . shellescape(sqlfile) . ' 2>&1'

    " fecha janela antiga se existir
    let buf_nr = bufnr('__SQL_RESULT__')
    if buf_nr != -1
        silent! execute buf_nr . 'bdelete!'
    endif

    " abre painel para os resultados
    botright 15split __SQL_RESULT__
    setlocal buftype=nofile bufhidden=wipe nobuflisted noswapfile modifiable
    setlocal nonumber norelativenumber

    " insere cabeçalho
    call append(0, '--- executada em : ' . toupper(a:env) . ' ---')
    call append(1, '')

    " executa comando e coloca saída
    execute 'silent! 3r !' . cmd

    " trava buffer e posiciona no topo
    setlocal nomodifiable
    normal! gg

    " se usou arquivo temporário, remove
    if a:target ==# 'visual'
        call delete(sqlfile)
    endif
endfunction

" centraliza as informações dos servidores em um dicionário
let g:sql_servers = {
\   'dev': 'localhost,1111',
\   'tst': 'localhost,2222',
\   'hml': 'localhost,3333',
\   'con': 'localhost,4444'
\ }

" ---------------------------------------------------------------------------
" Atalhos (F5 + nome do servidor)
" Arquivo inteiro
nnoremap <F4>dev :call <SID>ExecuteSQL('dev', 'file')<CR>
nnoremap <F4>tst :call <SID>ExecuteSQL('tst', 'file')<CR>
nnoremap <F4>hml :call <SID>ExecuteSQL('hml', 'file')<CR>
nnoremap <F4>con :call <SID>ExecuteSQL('con', 'file')<CR>

" Seleção visual
xnoremap <F4>dev :<C-u>call <SID>ExecuteSQL('dev', 'visual')<CR>
xnoremap <F4>tst :<C-u>call <SID>ExecuteSQL('tst', 'visual')<CR>
xnoremap <F4>hml :<C-u>call <SID>ExecuteSQL('hml', 'visual')<CR>
xnoremap <F4>con :<C-u>call <SID>ExecuteSQL('con', 'visual')<CR>
" }}}

nnoremap <silent> <leader> :WhichKey '<Space>'<CR>

