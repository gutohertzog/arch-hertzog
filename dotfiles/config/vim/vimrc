" PRIMEIRO ---------------------------------------------------------------- {{{
" configurações que PRECISAM ser carregadas antes de tudo
set nocompatible            " desativa a compatibilidade com vi
set encoding=utf-8          " define a codificação padrão
set fileencoding=utf-8      " garante que arquivos sejam salvos em UTF-8
set fileformats=unix,dos,mac
" }}}

" INTERFACE --------------------------------------------------------------- {{{
syntax on               " habilite realce de sintaxe
set number              " mostra número das linhas
set relativenumber      " números relativos para navegação
set cursorline          " destaca a linha atual
set ruler               " mostra posição do cursor
set showcmd             " exibe comandos incompletos
set laststatus=2        " sempre mostra a barra de status
set noshowmode          " mostra modo atual (normal, insert, etc)
set wildmenu            " menu de autocompletar mais amigável
set scrolloff=3         " mantém 3 linhas de amrgem ao rolar
set sidescrolloff=0     " mantém 0 colunas de margem ao rolar
set splitbelow          " divide a tela para baixo
set splitright          " divide a tela para direita
set splitkeep=screen    " ao dividir, mantém o texto na mesma linha da tela
" }}}

" EDIÇÃO ------------------------------------------------------------------ {{{
set tabstop=4                   " largura de tabulação
set shiftwidth=4                " tamanho de indentação automática
set expandtab                   " converte TABs em espaços
set smarttab                    " TAB inteligente
set autoindent                  " copia indentação da linha anterior
set smartindent                 " indentação inteligente
set backspace=indent,eol,start  " como o backspace funciona no final da linha
" }}}

" PESQUISA ---------------------------------------------------------------- {{{
set wrapscan    " volta para o começo do arquivo quando chegar ao final
set ignorecase  " ignora maiúsculas / minúsculas
set smartcase   " respeita se usar maiúscula
set incsearch   " busca incremental
set hlsearch    " destaca todas as ocorrências
" }}}

" BACKUP, SWAP E UNDO ----------------------------------------------------- {{{
" Dica: certifique-se de criar essas pastas antes de usar:
"   Linux :
"       - mkdir -p ~/.config/vim/backups
"       - mkdir -p ~/.config/vim/undo
"       - mkdir -p ~/.config/vim/swaps
"   Windows:
"       - mkdir %USERPROFILE%\vimfiles\backups
"       - mkdir %USERPROFILE%\vimfiles\undo
"       - mkdir %USERPROFILE%\vimfiles\swaps

set backup      " habilita arquivos de backup (~)
set undofile    " habilita histórico de undo persistente
set swapfile    " habilita swapfiles (.swp)

" detecta SO
if has("win32") || has("win64")
    let s:vim_data = expand('~/vimfiles')       " Windows
else
    let s:vim_data = expand('~/.config/vim')    " Linux / Unix / macOS
endif

" pastas
let s:backupdir = s:vim_data . '/backups//'
let s:undodir   = s:vim_data . '/undos//'
let s:swapdir   = s:vim_data . '/swaps//'

" aplica as configurações
execute 'set backupdir=' . s:backupdir
execute 'set undodir='   . s:undodir
execute 'set directory=' . s:swapdir
" }}}

