{
    "chat.commandCenter.enabled": false,
    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingDelete": "always",
    "editor.autoClosingQuotes": "always",
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": false,
    "editor.codeLens": true,
    "editor.codeLensFontFamily": "CaskaydiaCove Nerd Font",
    "editor.colorDecoratorsLimit": 1000,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line",
    "editor.cursorSurroundingLines": 2,
    "editor.dragAndDrop": true,
    "editor.dropIntoEditor.enabled": true,
    "editor.emptySelectionClipboard": true,
    "editor.fontFamily": "'CaskaydiaMono Nerd Font', 'monospace'",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.fontWeight": "400",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.highlightActiveBracketPair": true,
    "editor.guides.highlightActiveIndentation": true,
    "editor.guides.indentation": true,
    "editor.inlayHints.fontFamily": "CaskaydiaMono Nerd Font",
    "editor.inlineSuggest.enabled": true,
    "editor.insertSpaces": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "right",
    "editor.mouseWheelZoom": true,
    "editor.multiCursorModifier": "alt",
    "editor.rulers": [ 80, 100 ],
    "editor.snippetSuggestions": "bottom",
    "editor.stickyScroll.enabled": true,
    "editor.suggest.showStatusBar": true,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "variable.parameter",
                "settings": {
                    "fontStyle": "underline"
                    // "foreground": "#4169E1"
                }
            },
            {
                "scope": [
                    "comment",
                    "string.quoted.docstring"
                ],
                "settings": {
                    "foreground": "#696969"
                }
            },
            {
                "scope": [
                    "entity.name.function",
                    "support.function.magic"
                ],
                "settings": {
                    // "foreground": "#00FF00",
                }
            },
            {
                "scope": [
                    "entity.name.class",
                    "entity.name.type.class"
                ],
                "settings": {
                    // "foreground": "#FFDF00",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "variable"
                ],
                "settings": {
                    // "fontStyle": "bold"
                    // "foreground": "#00FFFF",
                }
            }
        ]
    },
    "editor.wordWrap": "on",
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "explorer.incrementalNaming": "disabled",
    "explorer.sortOrder": "type",
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    // para melhorar performance
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "**/*.html": "html",
        "**/base_templates/**/*.html": "django-html",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements",
        "**/templates/**/*.html": "django-html",
        "*.html": "html",
        "*.js": "javascript",
        "*.jsx": "javascriptreact",
        "*.svg": "html",
        "*.xml": "html",
        "django-html": "html" // batisteo.vscode-django
    },
    "files.autoSave": "off",
    "files.autoSaveDelay": 0,
    // "files.eol": "\r\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.confirmSync": false,
    "git.enableStatusBarSync": true,
    "git.suggestSmartCommit": false,
    "git.terminalGitEditor": true,
    "gitlens.graph.minimap.dataType": "lines",
    "gitlens.telemetry.enabled": false,
    "indentRainbow.colors": [
        "rgba(255,0,0,0.1)", // vermelho #ff0000
        "rgba(255,165,0,0.1)", // laranja #ffa500
        "rgba(255,255,0,0.1)", // amarelo #ffff00
        "rgba(0,255,0,0.1)", // verde #00ff00
        "rgba(0,0,255,0.1)", // azul #0000ff
        "rgba(75,0,130,0.1)", // lilás #4b0082
        "rgba(238,130,238,0.1)" // violeta #ee82ee
    ],
    "markdown.updateLinksOnFileMove.enabled": "always",
    "peacock.affectActivityBar": false,
    "peacock.affectStatusBar": false,
    "problems.decorations.enabled": true,
    "problems.showCurrentInStatus": true,
    // "python.analysis.autoImportCompletions": true,
    // "python.analysis.completeFunctionParens": true,
    // "python.analysis.inlayHints.functionReturnTypes": false,
    // "python.analysis.inlayHints.pytestParameters": false,
    // "python.analysis.inlayHints.variableTypes": false,
    // "python.analysis.typeCheckingMode": "basic",
    "python.defaultInterpreterPath": "python",
    "python.envFile": "${workspaceFolder}/.venv",
    "python.interpreter.infoVisibility": "always",
    "python.languageServer": "Default",
    // "python.linting.flake8Enabled": true,
    // "python.linting.mypyEnabled": true,
    "python.terminal.focusAfterLaunch": true,
    "search.defaultViewMode": "tree",
    "search.sortOrder": "countDescending",
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.smoothScrolling": true,
    // "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "manual",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.cursorStylePerMode.visual": "block",
    "vim.cursorStylePerMode.visualblock": "underline",
    "vim.cursorStylePerMode.visualline": "underline",
    "vim.foldfix": true,
    "vim.highlightedyank.duration": 300,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // comandos de navegação no arquivo
        // { "before": [ "J" ], "after": [ "5", "j" ] },
        // { "before": [ "K" ], "after": [ "5", "k" ] },
        // { "before": [ "j" ], "after": [ "g", "j" ] },
        // { "before": [ "k" ], "after": [ "g", "k" ] },
        // { "before": [ "g", "j" ], "after": [ "j" ] },
        // { "before": [ "g", "k" ], "after": [ "k" ] },
        { "before": [ "H" ], "after": [ "^" ] },
        { "before": [ "L" ], "after": [ "$" ] },
        { "before": [ "Y" ], "after": [ "y", "$" ] },
        // { "before": [ "<leader>", "j" ], "after": [ "J" ] },
        // { "before": [ "<Leader>", "k" ], "commands": [ "lineBreakInsert" ] },
        // { "before": [ "<Leader>", "/" ], "commands": [ ":noh" ] },
        { "before": [ "<Leader>", "w" ], "commands": [ ":w" ] },
        // { "before": [ "<Leader>", "m" ], "commands": [ "bookmarks.toggle" ] },
        // { "before": [ "<Leader>", "b" ], "commands": [ "bookmarks.list" ] },
        // comandos de navegação das abas
        // { "before": [ "<C-h>" ], "after": [ "<C-w>", "h" ] },
        // { "before": [ "<C-j>" ], "after": [ "<C-w>", "j" ] },
        // { "before": [ "<C-k>" ], "after": [ "<C-w>", "k" ] },
        // { "before": [ "<C-l>" ], "after": [ "<C-w>", "l" ] },
        // comandos para a manipulacão das abas
        // { "before": [ "<Leader>", "t", "t" ], "commands": [ ":tabnew" ] },
        // { "before": [ "<Leader>", "t", "n" ], "commands": [ ":tabnext" ] },
        // { "before": [ "<Leader>", "t", "p" ], "commands": [ ":tabprev" ] },
        // { "before": [ "<Leader>", "t", "w" ], "commands": [ ":tabclose" ] },
        // { "before": [ "<Leader>", "t", "o" ], "commands": [ ":tabonly" ] },
        // comandos para a central de controle do VS Code
        { "before": [ "<Leader>", "f", "f" ], "commands": [ "workbench.action.quickOpen" ] },
        { "before": [ "<Leader>", "f", "w" ], "commands": [ "workbench.action.gotoSymbol" ] },
        { "before": [ "<Leader>", "f", "p" ], "commands": [ "workbench.action.showCommands" ] },
        // comandos para o workbench do VS Code
        { "before": [ "<Leader>", "o", "f" ], "commands": [ "workbench.action.files.openFile" ] },
        // { "before": [ "<Leader>", "w", "b" ], "commands": [ "workbench.action.toggleSidebarVisibility" ] },
        // { "before": [ "<Leader>", "z", "m" ], "commands": [ "workbench.action.toggleZenMode" ] },
        // comandos para o SQL
        // { "before": [ "<Leader>", "e", "q" ], "commands": [ "sqltools.executeCurrentQuery" ] }
    ],
    "vim.smartRelativeLine": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vsicons.associations.files": [
        {
            "icon": "sql",
            "extensions": [ "sql", "sqlite" ],
            "format": "svg"
        }
    ],
    "vsicons.dontShowNewVersionMessage": true,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "auto",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.scrollToSwitchTabs": true,
    "workbench.editor.tabCloseButton": "right",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.layoutControl.enabled": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false
}
